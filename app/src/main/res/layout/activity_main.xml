<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diogo.ubichair.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="387dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Desired Temperature:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desiredTempText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="desiredtemperature"
            android:textAlignment="center"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/desiredTempBar"
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Temperature" />

        <TextView
            android:id="@+id/_opType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="operation"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/operationImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="98dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/actualTempDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actual Temperature:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/actualTempText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="actual temperature"
            android:textAlignment="center" />

        <ProgressBar
            android:id="@+id/actualTempBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
